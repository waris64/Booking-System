generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Trip {
 id Int @id @default(autoincrement())
 title String
 price Int
 duration Int
 location String
 startDate DateTime
 endDate  DateTime  
 availableSeats Int
 bookings Booking[]   
}

model Booking{
 id Int @id @default(autoincrement())
 userId Int
 tripId Int 
 numberOfPeople Int
 status String @default("pending")
 totalPrice Float 
 createdAt DateTime  @default(now())
 Trip Trip @relation(fields:[tripId], references:[id])
}